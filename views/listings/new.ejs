<% layout("/layout/boilerplate.ejs") %>

    <body>
        <form method="POST" action="/listings" novalidate  class="needs-validation" enctype="multipart/form-data">
            <div class="row">
                <div class="col-8 offset-2">
                    <br>
                    <h1>Create New Listing</h1>
<br>
                    <div class="mb-3">
                        <label for="title" class="form-label">Enter Title</label>
                        <input type="text" placeholder="Enter Title" name="listing[title]" class="form-control" required>
                        <div class="valid-feedback">
                            <i class="fa-solid fa-check"></i>
                          </div>
                          <div class="invalid-feedback">
                            Please Enter the Title
                          </div>

                    </div>
                    <div class="mb-3">
                        <label for="description" class="form-label">Enter Description</label>

                        <textarea name="listing[description]" placeholder="Enter Description" class="form-control" required></textarea>
                        <div class="valid-feedback">
                            <i class="fa-solid fa-check"></i>
                          </div>
                          <div class="invalid-feedback">
                            Please Enter the Description.
                          </div>
                    </div>
                    <!-- <div class="mb-3">
                        <label for="image" class="form-label">Enter Image URL</label>

                        <textarea name="listing[image]" placeholder="Enter image url" class="form-control"></textarea>
                       
                    </div> -->
                    <div class="mb-3">
                      <label for="image" class="form-label">Upload Image</label>
                      <input type="file"  name="listing[image]" class="form-control" required>
                    </div>
                    <div class="row">
                        <div class="mb-3 col-md-4">
                        <label for="price" class="form-label">Enter Price</label>
                        <input type="number" name="listing[price]" placeholder="enter Price" class="form-control" required>
                        <div class="valid-feedback">
                            <i class="fa-solid fa-check"></i>
                          </div>
                          <div class="invalid-feedback">
                            Please Enter a Price.
                          </div>
                    </div>

                    <div class="mb-3 col-md-8">
                        <label for="location" class="form-label">Enter Location</label>
                        <input type="text" name="listing[location]" placeholder="Location" class="form-control" required>
                        <div class="valid-feedback">
                            <i class="fa-solid fa-check"></i>
                          </div>
                          <div class="invalid-feedback">
                            Please Enter a Location.
                          </div>
                    </div>
                    </div>
                    

                    <div class="mb-3">
                        <label for="country" class="form-label">Enter Contry</label>
                        <input type="text" name="listing[country]" placeholder="Country" class="form-control" required>
                        <div class="valid-feedback">
                            <i class="fa-solid fa-check"></i>
                          </div>
                          <div class="invalid-feedback">
                            Please Enter a Country.
                          </div>
                    </div>

                    <br><br>
                    <button class="btn btn-dark newpagebtn">Submit</button>
                </div>
            </div>

        </form>

    </body>